# Environment variables for Docker Compose

# Application versions
FRONTEND_IMAGE={{ frontend_image }}
FRONTEND_VERSION={{ frontend_version }}
BACKEND_IMAGE={{ backend_image }}
BACKEND_VERSION={{ backend_version }}

SERVICES_VERSION={{ services_version }}

# Network configuration
IP_ADDR={{ ip_addr }}
IP_BACKEND={{ ip_backend }}
IP_FRONTEND={{ ip_frontend }}
IP_NGINX={{ ip_nginx }}
IP_FLUENTBIT={{ ip_fluentbit }}
IP_OPENSEARCH_NODE1={{ ip_opensearch_node1 }}
IP_OPENSEARCH_NODE2={{ ip_opensearch_node2 }}
IP_OPENSEARCH_DASHBOARD={{ ip_opensearch_dashboard }}
IP_SUBNET={{ ip_subnet }}

# Port configuration
PORT_BACKEND={{ port_backend }}
PORT_FRONTEND={{ port_frontend }}

# OpenSearch configuration
OPENSEARCH_IMAGE={{ opensearch_image }}
OPENSEARCH_VERSION={{ opensearch_version }}
OPENSEARCH_DASHBOARD_IMAGE={{ opensearch_dashboard_image }}
OPENSEARCH_DASHBOARD_VERSION={{ opensearch_dashboard_version }}
OPENSEARCH_PORT={{ opensearch_port }}
OPENSEARCH_DASHBOARD_PORT={{ opensearch_dashboard_port }}
OPENSEARCH_INITIAL_ADMIN_PASSWORD={{ opensearch_initial_admin_password }}
OPENSEARCH_CLUSTER_NAME={{ opensearch_cluster_name }}

# OpenSearch authentication for FluentBit
OS_HTTP_USER={{ opensearch_username }}
OS_HTTP_PASSWORD={{ opensearch_initial_admin_password }}
OS_OUTPUT_HOST={{ ip_opensearch_node1 }}
OS_OUTPUT_PORT={{ opensearch_port }}

# Nginx configuration
NGINX_IMAGE={{ nginx_image }}
NGINX_VERSION={{ nginx_version }}

# FluentBit configuration
FLUENTBIT_IMAGE={{ fluentbit_image }}
FLUENTBIT_VERSION={{ fluentbit_version }}
FLUENTBIT_STORAGE_PATH={{ fluentbit_storage_path }}